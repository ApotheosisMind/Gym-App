<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="1"
    android:selectAllOnFocus="true"
    android:background="#0f0f0f"
    android:orientation="vertical"
    tools:context=".beginpage">

    <ImageView
        android:id="@+id/backgroundpg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:alpha="1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/entrywallpaper" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="695dp"
        android:alpha="0.975"
        android:background="@drawable/radius"
        android:backgroundTint="#fff"
        android:fontFamily="@font/artifika"
        android:paddingTop="20dp"
        android:text="Beginner"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/backgroundpg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/backgroundpg2"
        app:layout_constraintTop_toBottomOf="@+id/backgroundpg2" />

    <ScrollView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bgmonday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Monday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgtuesday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:background="@drawable/rippletransparent"
                android:text="Tuesday"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgwednesday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Wednesday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgthursday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Thursday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgfriday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Friday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgsaturday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Saturday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bgsunday1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/artifika"
                android:padding="20sp"
                android:text="Sunday"
                android:background="@drawable/rippletransparent"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>